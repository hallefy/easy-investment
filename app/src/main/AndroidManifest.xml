<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ferreira.hallefy.easyinvestment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="ferreira.hallefy.easyinvestment.presentation.views.formulary.view.ActivityFormulary"
            android:screenOrientation="portrait"/>

        <activity android:name="ferreira.hallefy.easyinvestment.presentation.views.result.view.ActivityResultInvestiment"
            android:screenOrientation="portrait"/>

        <activity android:name="ferreira.hallefy.easyinvestment.presentation.views.splash.view.ActivitySplash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>